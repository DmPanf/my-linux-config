# at 5 a.m every week with:
# 0 5 * * 1 tar -zcf /var/backups/home.tgz /home/
# m h  dom mon dow   command

SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=""

# Reboot Sequence: Monday (Target 04:07 MSK)
4 1 * * 1 /usr/local/bin/tg-reboot "04:07 MSK"

# Reboot Sequence: Thursday (Target 04:25 MSK)
22 1 * * 4 /usr/local/bin/tg-reboot "04:25 AM MSK"
